local ModLua = {}

local origFuncs = {}
local newFuncs = {}
local interactMenu
local GAJ = {}

function init()
	interactMenu = Helper.getMenu ("InteractMenu")
	origFuncs.insertLuaAction = interactMenu.insertLuaAction
	interactMenu.insertLuaAction = newFuncs.insertLuaAction
	RegisterEvent ("GAJ.SetMapSellshipsButtonAvailability", GAJ.SetMapSellshipsButtonAvailability)
end
function newFuncs.insertLuaAction (actiontype, istobedisplayed)
	if actiontype ~= "sellships" then
    DebugError("sellships: entry3")
		origFuncs.insertLuaAction (actiontype, istobedisplayed)
	end
end
function GAJ.SetMapSellshipsButtonAvailability (_, isRemoveSellshipsCommandFromMap)
	DebugError("SetMapSellshipsButtonAvailability", isRemoveSellshipsCommandFromMap)
	GAJ.isRemoveSellshipsCommandFromMap = isRemoveSellshipsCommandFromMap
end

init()
